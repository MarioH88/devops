[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    htmlcov,
    .venv,
    venv,
    .env,
    tests/
ignore = 
    # Long lines in HTML templates are acceptable
    E501,
    # Blank line with whitespace in templates
    W293,
    # Allow string templates with long lines
    E122, E126,
    # Import not at top of file
    E402,
    # Whitespace before ':'
    E203
per-file-ignores =
    # Allow long lines and formatting issues in web templates
    web_dashboard.py: E501, W293, E302, E305
    # Allow import issues in __init__ files
    __init__.py: F401
    # Allow longer lines in tests
    tests/*: E501
max-complexity = 15